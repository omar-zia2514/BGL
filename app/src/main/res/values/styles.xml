<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/app_green</item>
        <item name="colorPrimaryDark">@color/app_green_dark</item>
        <item name="colorAccent">@color/dark_grey</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textSize">20sp</item>
        <item name="android:textColorPrimary">@color/app_green</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.Light.SearchView">
        <!-- Gets rid of the search icon -->
        <item name="searchIcon">@android:drawable/ic_search_category_default</item>
        <!-- Gets rid of the "underline" in the text -->
        <item name="queryBackground">@android:color/black</item>

        <!-- Gets rid of the search icon when the SearchView is expanded -->
        <item name="searchHintIcon">@null</item>
        <!-- The hint text that appears when the user has not typed anything -->
        <!--        <item name="queryHint">@string/search_hint</item>-->
        <item name="android:textColorPrimary">@color/app_green</item>
        <item name="android:textColorSecondary">@color/app_green_dark</item>
        <item name="android:editTextColor">@color/dark_grey</item>

        <item name="android:textSize">10dp</item>
        <!-- Hint Color -->
        <item name="android:textColorHint">@color/app_green</item>
        <!-- Icon Color -->
        <item name="android:tint">@color/dark_grey</item>
    </style>

    <style name="HeaderTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">1sp</item>
        <item name="android:textColor">#28478D</item>
    </style>

    <style name="TextLabel" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/app_green</item>
        <item name="android:textSize">20sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/app_green</item>
        <item name="colorControlNormal">@color/app_green</item>
        <item name="colorControlActivated">@color/app_green</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/app_green</item>
    </style>
</resources>