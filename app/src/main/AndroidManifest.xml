<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.prototype.diabetescompanion">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DiabetesCompanion">
        <activity android:name=".view.PatientActivity"></activity>
        <activity android:name=".view.SettingsActivity" />
        <activity android:name=".view.PatientDetailActivity" />
        <activity android:name=".view.PatientsListActivity" />
        <activity
            android:name=".view.SplashActivity"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.ModeSelectActivity"
            android:noHistory="true" />
    </application>

</manifest>